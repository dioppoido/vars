<!DOCTYPE html>

<html lang="ja">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title-->
    <title>EventCreate - VARS -</title>

    <!-- Bootstrap Core CSS -->
    <link href="../public/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../public/css/eventcreate.css" rel="stylesheet">
    <link href="../public/css/header.css" rel="stylesheet">
    <link href="../public/css/footer.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../public/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/earlyaccess/notosansjapanese.css' rel='stylesheet' type='text/css'>

</head>
<body>

<%- include('./header.ejs') %>

<section>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">

                <div class="eventcreate">

                    <div class="event-title text-center"><i class="fa fa-plus-circle" aria-hidden="true"></i> イベント作成</div>

                    <div class="create-form">
                        <form method="post" action="eventcreate">

                            <div class="form-group">
                              <label>イベント名 : </label>
                              <input type="text" class="form-control input-lg event-input" name="eventname" placeholder="例)2016年合評会">
                            </div>

                            <div class="form-group">
                              <label>開催日時 : </label>
                            </div>

                            <div class="form-group">
                              <label>会場 : </label>
                              <input type="text" class="form-control input-lg event-input" name="venue" placeholder="例）神戸電子専門学校 ソニックホール">
                            </div>

                            <div class="form-group">
                              <label>イベント概要 : </label>
                              <textarea class="form-control input-lg event-input" name="overview" placeholder="例)合評会です."></textarea>
                            </div>


                            <div class="form-group">
                              <label>代表者名(作成者) : </label>
                              <input type="text" class="form-control input-lg event-input" name="representativename" placeholder="例)神戸太郎">
                            </div>

                            <div class="form-group">
                              <label>メールアドレス : </label>
                              <input type="text" class="form-control input-lg event-input" name="representativemail" placeholder="例)kdxxxxxxxx@st.kobedenshi.ac.jp">
                            </div>

                            <div class="form-group">
                              <label>コース : </label>
                              <select class="form-control input-lg event-input" name="department">
                                <option value="1">ソフトⅠ</option>
                                <option value="2">ソフトⅡ</option>
                                <option value="3">ソフトⅢ</option>
                                <option value="4">ソフトⅣ</option>
                              </select>
                            </div>

                            <div class="form-group">
                              <label>参加チーム登録開始期限 : </label>
                            </div>

                            <div class="form-group">
                              <label>参加チーム登録終了期限 : </label>
                            </div>

                            <div class="form-group">
                              <label>投票開始日時 : </label>
                            </div>

                            <div class="form-group">
                              <label>投票終了日時 : </label>
                            </div>

                            <div class="text-right">
                                <button type="submit" class="btn btn-success submit-btn">送　信</button>
                            </div>

                        </form>
                    </div>

                </div>


            </div><!-- col -->

        </div><!-- row -->
    </div><!-- container -->
</section>

<%- include('./footer.ejs') %>

<!-- jQuery -->
<script src="../public/js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../public/js/bootstrap.min.js"></script>

<!-- Footer Fixed -->
<script src="../public/js/footerFixed.js"></script>

</body>
</html>
