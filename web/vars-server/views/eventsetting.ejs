<!DOCTYPE html>

<html lang="ja">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title-->
    <title>EventSetting - VARS -</title>

    <!-- Bootstrap Core CSS -->
    <link href="../public/css/bootstrap.min.css" rel="stylesheet">

    <!-- Toggle -->
    <link href="../public/css/bootstrap-toggle.css" rel="stylesheet">

    <!-- Date Picker -->
    <link href="../public/css/jquery.datetimepicker.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../public/css/eventsetting.css" rel="stylesheet">
    <link href="../public/css/header.css" rel="stylesheet">
    <link href="../public/css/footer.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../public/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/earlyaccess/notosansjapanese.css' rel='stylesheet' type='text/css'>

</head>
<body>

<%- include('./header.ejs') %>

<section>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">

                <div class="eventsetting">

                    <div class="event-title text-center"><i class="fa fa-plus-circle" aria-hidden="true"></i> イベント情報変更</div>

                    <div class="setting-form">
                        <form method="post" name="eventsetting" action="/eventcontrol/eventsetting" enctype="multipart/form-data" onsubmit="return date_confirm()">
                            <input type="hidden" id="eventid" name="eventid" value="<%= eventdata[0].Eventid %>">
                            <input type="hidden" id="imagepath" name="imagepath" value="<%= eventdata[0].Image %>">
                            <div class="form-group">
                              <label>イベント名 : </label>
                              <input type="text" class="form-control input-lg event-input" name="eventname" value="<%= eventdata[0].Eventname %>" required>
                            </div>


                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>開催日時 : </label>
                                    <input type="text" class='form-control input-lg event-input' id="hold-start" value="2017/01/11 10:47" name="datesstart" required/>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>開催終了日時 : </label>
                                    <input type='text' class='form-control input-lg event-input' id="hold-end" name="datesfinish" required/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>会場 : </label>
                                <input type="text" class="form-control input-lg event-input" name="venue" value="<%= eventdata[0].Venue %>" required>
                            </div>

                            <div class="form-group">
                              <label>イベント概要 : </label>
                              <textarea class="form-control input-lg event-input" name="overview"  required><%= eventdata[0].Overview %></textarea>
                            </div>


                            <div class="form-group">
                              <label>代表者名(作成者) : </label>
                              <input type="text" class="form-control input-lg event-input" name="displayname" value="<%= user %>" required>
                            </div>

                            <div class="form-group">
                              <label>メールアドレス : </label>
                              <input type="text" class="form-control input-lg event-input" name="address" value="<%= adress %>" required>
                            </div>

                            <div class="form-group">
                              <label>分野 : </label>
                              <select class="form-control input-lg event-input" name="field" required>
                                  <% for(var i = 0 ; i < field.length; i++) { %>
                                        <option value="<%=field[i].Fieldid%>" <%if(field[i].Fieldid===eventdata[0].Fieldid){%>selected<%}%>><%=field[i].Fieldname%></option>
                                  <% } %>
                              </select>
                            </div>


                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>参加チーム登録受付日時 : </label>

                                    <input type='text' id="team-start" class='form-control input-lg event-input'  name="createstart" required />

                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>参加チーム受付終了日時 : </label>

                                    <input type='text' id="team-end" class='form-control input-lg event-input' name="createfinish" required />

                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>投票開始日時 : </label>

                                    <input type='text' id="vote-start" class='form-control input-lg event-input' name="votestart" data-timepicker="true" required />

                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>投票終了日時 : </label>

                                    <input type='text' id="vote-end" class='form-control input-lg event-input' name="votefinish" required />

                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                <div class="form-group">
                                    <label>パスワード設定: </label>
                                    <input data-toggle="toggle" data-size="small" type="checkbox"  data-toggle="button" id="passtoggle" name="passflag" onchange="change_pass(this);">
                                    <input type='password' id="passarea" class='form-control input-lg event-input' name="password" disabled="disabled"  maxlength='12' placeholder="4文字以上12文字以下で入力してください"/>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <label>サムネイル画像変更( .jpg .png .gifのみ ) : </label>
                            </div>

                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-center">
                                <div class="form-group">
                                    <label class="btn btn-primary file-btn">
                                        ファイルを選択
                                        <input type='file' id="thumbnail_file" name="thumbnail" accept="image/jpeg, image/gif, image/png" onchange="showFilename();">
                                        <
                                    </label>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                <body onload="showFilename();"></body>
                                <div id="file_name" class="name"></div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success submit-btn">イベント情報変更</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <br>
                        <form method="post" name="eventsetting" action="eventsetting" enctype="multipart/form-data" onsubmit="return date_confirm()" novalidate>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-danger submit-btn">イベント削除</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>

                </div>


            </div><!-- col -->

        </div><!-- row -->
    </div><!-- container -->
</section>

<%- include('./footer.ejs') %>

<!-- jQuery -->
<script src="../public/js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../public/js/bootstrap.min.js"></script>

<!-- Show File Name -->
<script src="../public/js/show.js"></script>

<!-- Form　confirmation -->
<script src="../public/js/form_confirmation.js"></script>

<!-- Date Picker -->
<script src="../public/js/jquery.datetimepicker.full.js"></script>
<script>

</script>

<!-- Footer Fixed -->
<script src="../public/js/footerFixed.js"></script>

<!-- onChange -->
<script src="../public/js/change.js"></script>

<!-- Toggle -->
<script src="../public/js/bootstrap-toggle.js"></script>

</body>
</html>
