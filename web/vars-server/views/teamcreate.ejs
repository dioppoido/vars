<!DOCTYPE html>

<html lang="ja">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title-->
    <title>TeamCreate - VARS -</title>

    <!-- Bootstrap Core CSS -->
    <link href="../public/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery Ui -->
    <link href="../public/css/jquery-ui.css" rel="stylesheet">
    <!-- Multiple select -->
    <link href="../public/css/jquery.multiselect.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../public/css/teamcreate.css" rel="stylesheet">
    <link href="../public/css/header.css" rel="stylesheet">
    <link href="../public/css/footer.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../public/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/earlyaccess/notosansjapanese.css' rel='stylesheet' type='text/css'>

</head>
<body>

<%- include('./header.ejs') %>

<section>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">

                <div class="teamcreate">

                    <div class="team-title text-center"><i class="fa fa-plus-circle" aria-hidden="true"></i> チーム作成</div>

                    <div class="create-form">
                        <form method="post" name="teamcreate" action="teamcreate" enctype="multipart/form-data" onsubmit="return date_confirm()">

                            <div class="form-group">
                              <label>チーム名 : </label>
                              <input type="text" class="form-control input-lg team-input" name="teamname" placeholder="" required>
                            </div>
                            <div class="form-group">
                              <input type="hidden" name="eventid" value="<%= eventid %>">
                            </div>
                            <div class="form-group">
                              <label>システム名 : </label>
                              <input type="text" class="form-control input-lg team-input" name="workname" placeholder="">
                            </div>
                            <div class="form-group">
                              <label>概要 : </label>
                              <textarea class="form-control input-lg team-input" name="overview" placeholder="例)メンバー名、チーム紹介"></textarea>
                            </div>
                            <div class="form-group">
                              <label>代表者名(作成者) : </label>
                              <input type="text" class="form-control input-lg team-input" name="displayname" value="<%= displayName %>" disabled="disabled" required>
                            </div>

                            <div class="form-group">
                              <label>メールアドレス : </label>
                              <input type="text" class="form-control input-lg team-input" name="address" value="<%= address %>" disabled="disabled" required>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label>部門選択 : </label><br>
                                    <!-- size = 部門の個数 -->
                                        <select id="department" class="form-control" multiple="multiple" name="department" size="3" style="display: none;">
                                            <option value="option1">総合部門</option>
                                            <option value="option2">デザイン部門</option>
                                            <option value="option3">システム部門</option>
                                        </select>
                                </div>
                             </div>



                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <label>サムネイル画像( .jpg .png .gifのみ ) : </label>
                            </div>

                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-center">
                                <div class="form-group">
                                    <label class="btn btn-primary file-btn">
                                        ファイルを選択
                                        <input type='file' id="thumbnail_file" name="thumbnail" accept="image/jpeg, image/gif, image/png" onchange="showFilename();">
                                    </label>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                <body onload="showFilename();"></body>
                                <div id="file_name" class="name"></div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success submit-btn">チーム登録</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>

                </div>


            </div><!-- col -->

        </div><!-- row -->
    </div><!-- container -->
</section>

<%- include('./footer.ejs') %>

<!-- jQuery -->
<script src="../public/js/jquery.js"></script>

<!-- jQuery Ui -->
<script src="../public/js/jquery-ui.min.js"></script>

<!-- multiselect -->
<script src="../public/js/jquery.multiselect.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../public/js/bootstrap.min.js"></script>

<!-- Show File Name -->
<script src="../public/js/show.js"></script>

<!-- Form　confirmation -->
<script src="../public/js/form_confirmation"></script>

<!-- Footer Fixed -->
<script src="../public/js/footerFixed.js"></script>

<!-- onChange -->
<script src="../public/js/change.js"></script>

</body>
</html>
